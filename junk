 * @time Thu Jun 04 2020 13:13:05 GMT+0300 (East Africa Time)
 * @content Javascript validator
 */

"use strict";
///////////////////////////////
//buttons
//////////////////////////////

var button = document.getElementById("submit");
var button_small_device = document.getElementById("submit-sm-device");

///////////////////////////////
//Form varables
///////////////////////////////

//Large devices
var fullname = document.getElementById("fullname");
var username = document.getElementById("username");
var email = document.getElementById("email");
var password = document.getElementById("password");
var conpwd = document.getElementById("conpwd");

//Small devices
var fullname_small_device = document.getElementById("fullname-sm-device");
var username_small_device = document.getElementById("username-sm-device");
var email_small_device = document.getElementById("email-sm-device");
var password_small_device = document.getElementById("password-sm-device");
var conpwd_small_device = document.getElementById("conpwd-sm-device");

/////////////////////////////////
//Patterns
////////////////////////////////
var fullname_regExp = /^[a-zA-Z ]+$/;
var username_regExp = /^[a-zA-Z0-9 ]+$/;
var email_regExp = /^[a-zA-Z0-9._]+@[a-zA-Z0-9._]+\.[a-zA-Z]{2,4}$/;
var number_regExp = /^[0-9]$/;
var password_regExp = /^[0-9A-Za-z$@#%!*?_,]+$/;

////////////////////////////////
//Errors
///////////////////////////////

//Large devices
var fullnameErr = document.getElementById("fullnameErr");
var usernameErr = document.getElementById("usernameErr");
var lastnameErr = document.getElementById("lastnameErr");
var emailErr = document.getElementById("emailErr");
var passwordErr = document.getElementById("passwordErr");
var conpwdErr = document.getElementById("conpwdErr");

//Small devices
var fullnameErr_small_device = document.getElementById("fullnameErr-sm-device");
var usernameErr_small_device = document.getElementById("usernameErr-sm-device");
var lastnameErr_small_device = document.getElementById("lastnameErr-sm-device");
var emailErr_small_device = document.getElementById("emailErr-sm-device");
var passwordErr_small_device = document.getElementById("passwordErr-sm-device");
var conpwdErr_small_device = document.getElementById("conpwdErr-sm-device");

//small devices validation
if (window.location.pathname === "/ProjectWeb/Accounts/") {
  fullname_small_device.addEventListener("focus", function () {
    if (fullname_small_device.value == "") {
      fullnameErr_small_device.innerHTML = "Enter your fullname";
      button_small_device.disabled = true;
      button_small_device.addEventListener("click", function (event) {
        event.stopPropagation();
      });
    } else {
      button_small_device.disabled = false;
      fullnameErr_small_device.innerHTML = null;
    }
  });
  fullname_small_device.addEventListener("blur", function () {
    if (fullname_small_device.value == "") {
      fullnameErr_small_device.innerHTML =
        "You have not entered your fullname !";
      button_small_device.disabled = true;
      button_small_device.addEventListener("click", function (event) {
        event.stopPropagation();
      });
    } else {
      button_small_device.disabled = false;
      fullnameErr_small_device.innerHTML = null;

      if (fullname_regExp.test(fullname_small_device.value) === false) {
        fullnameErr_small_device.innerHTML =
          "Only letters and whitespaces are allowed !";
        button_small_device.disabled = true;
        button_small_device.addEventListener("click", function (event) {
          event.stopPropagation();
        });
      } else {
        button_small_device.disabled = false;
        fullnameErr_small_device.innerHTML = null;
      }
    }
  });
  username_small_device.addEventListener("focus", function () {
    if (username_small_device.value == "") {
      usernameErr_small_device.innerHTML = "Choose a username";
      button_small_device.disabled = true;
      button_small_device.addEventListener("click", function (event) {
        event.stopPropagation();
      });
    } else {
      button_small_device.disabled = false;
      usernameErr_small_device.innerHTML = null;
    }
  });
  username_small_device.addEventListener("blur", function () {
    if (username_small_device.value == "") {
      usernameErr_small_device.innerHTML = "You have not chosen any username !";
      button_small_device.disabled = true;
      button_small_device.addEventListener("click", function (event) {
        event.stopPropagation();
      });
    } else {
      button_small_device.disabled = false;
      usernameErr_small_device.innerHTML = null;
    }
    if (username_regExp.test(username_small_device.value) === false) {
      usernameErr_small_device.innerHTML =
        "Only letters numbers and whitespaces are allowed";
      button_small_device.disabled = true;
      button_small_device.addEventListener("click", function (event) {
        event.stopPropagation();
      });
    } else {
      button_small_device.disabled = false;
      usernameErr_small_device.innerHTML = null;
    }
  });
 
}





